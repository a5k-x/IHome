<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IHome" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="StyleFields" parent="Theme.IHome">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/boxCornerRadius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/boxCornerRadius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/boxCornerRadius</item>
        <item name="boxCornerRadiusTopStart">@dimen/boxCornerRadius</item>
        <item name="boxStrokeColor">@color/box_outline_color</item>
        <item name="android:textColorHint">@color/btn_fields</item>
        <item name="endIconTint">@color/btn_fields</item>
        <item name="boxStrokeWidth">@dimen/boxStrokeWidth</item>
        <item name="hintEnabled">false</item>
        <item name="android:layout_marginStart">@dimen/text_toRegistration_margin</item>
        <item name="android:layout_marginEnd">@dimen/text_toRegistration_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_toRegistration_margin</item>
    </style>
    <style name="TextField" parent="Theme.IHome">
        <item name="android:textColor">#03A9F4</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="BtnSingInSingOut" parent="Theme.IHome">
        <item name="android:layout_margin">@dimen/text_toRegistration_margin</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/btn_text_color</item>
        <item name="backgroundTint">#97D5F1</item>
        <item name="cornerRadius">@dimen/boxCornerRadius</item>

    </style>
</resources>